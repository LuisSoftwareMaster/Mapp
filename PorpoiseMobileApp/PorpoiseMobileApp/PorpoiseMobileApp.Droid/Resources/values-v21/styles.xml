<resources>
	<!-- Base application theme. -->
	<style
		name="AppTheme"
		parent="Theme.AppCompat.Light.NoActionBar">
    <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
    <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    <item name="vpiTabTextStyle">@style/CustomTabPageIndicator.Text</item>
    <item name="android:buttonStyle">@style/Porpoise.Widget.TransparentButton</item>
    <item name="android:actionBarStyle">@style/Porpoise.Actionbar.V7</item>
    <item name="android:editTextStyle">@style/PorpoiseEditText</item>
    <item name="android:colorPrimary">@color/porpoise_turquoise</item>
    <item name="android:colorPrimaryDark">@color/porpoise_turquoise_dark</item>
    <item name="android:colorAccent">@color/porpoise_pink</item>
    <item name="android:navigationBarColor">@color/porpoise_turquoise_with_transparency</item>
    <item name="android:statusBarColor">@color/porpoise_turquoise_with_transparency</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
	</style>

	
	<style
		name="Widget.Porpoise.ProgressBar"
		parent="@android:style/Widget.Material.Light.ProgressBar">
		<item
			name="android:indeterminateDrawable">@drawable/porpoise_spinner</item>
	</style>
	<style
		name="Widget.AppCompat.Porpoise.ProgressBar"
		parent="@style/Widget.AppCompat.ProgressBar">
		<item
			name="android:indeterminateDrawable">@drawable/porpoise_spinner</item>
	</style>
	<style
		name="Widget.Porpoise.ProgressBar.Turquoise"
		parent="@android:style/Widget.Material.Light.ProgressBar">
		<item
			name="android:indeterminateDrawable">@drawable/porpoise_spinner</item>
	</style>
	
	<style
		name="CustomTitlePageIndicator">
		<item
			name="android:background">#18FF0000</item>
		<item
			name="footerColor">#FFAA2222</item>
		<item
			name="footerLineHeight">1dp</item>
		<item
			name="footerIndicatorHeight">3dp</item>
		<item
			name="footerIndicatorStyle">underline</item>
		<item
			name="textColor">#AA000000</item>
		<item
			name="selectedColor">#FF000000</item>
		<item
			name="selectedBold">true</item>
	</style>
	<style
		name="CustomCirclePageIndicator">
		<item
			name="android:background">@android:color/transparent</item>
		<item
			name="fillColor">#FFFFFFFF</item>
		<item
			name="strokeColor">#FF000000</item>
		<item
			name="strokeWidth">1dp</item>
		<item
			name="radius">10dp</item>
		<item
			name="centered">true</item>
	</style>
	<style
		name="CustomTabPageIndicator"
		parent="Widget.TabPageIndicator">
		<item
			name="android:background">@drawable/custom_tab_indicator</item>
	</style>
	<style
		name="CustomTabPageIndicator.Text"
		parent="Widget.TabPageIndicator.Text">
		<item
			name="android:textColor">#FF555555</item>
	</style>
</resources>